let result: string = ""
let x: int[] = [10, 20, 30]

function ref(p: string): int[] {
    result = result + p
    return x;
}

function idx(i: int): int {
    result = result + i
    return i
}

function val(): int {
    result = result + "V"
    return 1
}

function main(): int {
    result = "";  // reset due to jit mode warmup

    let s: string = "" + ref("A")[idx(2)] = ref("B")[idx(1)] = ref("C")[idx(0)] = val()
